	<% end %>	
  <p><input type="submit" value="Tirar dados" style="padding: 5px;background-color: #66a2c8;border-radius: 7%;font-size: larger;
font-weight: bold;color: white;cursor: pointer;"/ >
</form>
<% if @@generala.getDados != [] %>
